{
  "name": "Node.js V8 Debugger",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Extension for automatically launching Developer Tools to debug Node.js applications",
  "author": "Justin Silver (jsilver@doublesharp)",
  "background": {
    "scripts": ["js/lib/monitor.js", "js/browser.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "images/logo32.png"
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "permissions": ["http://*/", "storage"],
  "options_page": "html/options.html",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+5",
        "mac": "Command+Shift+5",
        "chromeos": "Ctrl+Shift+5",
        "linux": "Ctrl+Shift+5"
      }
    }
  }
}
